<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.example.divya.getlocation.SecondActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_Date"
        android:layout_gravity="top"
        android:textSize="20dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="6"
        android:weightSum="1">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="304dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_Temp"
                android:layout_weight="0.45"
                android:textSize="60dp"
                android:paddingTop="50dp"
                android:paddingLeft="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="304dp"
                android:orientation="vertical"
                android:layout_weight="0.55"
                android:weightSum="6">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/textView_Icon"
                        android:layout_weight="4"
                        android:textSize="100dp"
                        android:typeface="serif"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp" />
                    <TextView
                        android:layout_width="142dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/textView_Desc"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:padding="5dp"
                        android:paddingTop="0dp" />
                    <TextView
                        android:layout_width="142dp"
                        android:layout_height="35dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/textView_Emp"
                        android:textAlignment="center"
                        android:textSize="19dp" />
            </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_Loc"
        android:layout_weight="2.52"
        android:ellipsize="middle"
        android:fontFamily="@android:string/selectTextMode"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />
    <Button
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_Info"
        android:layout_gravity="center_horizontal|bottom"
        android:text="@string/get_info"
        android:textSize="30dp"
        android:textColor="@color/FFFFFFFF"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn" />
</LinearLayout>
